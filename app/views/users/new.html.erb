<h1>Create New Account</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages do |m| %>
      <li><%= m %></li>
    <% end %>
  </ol>
<% end %>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email, "Enter Email" %>
    <%= f.email_field :email, :required => true, :class => 'form-control', :placeholder => 'great@example.com' %>
  </div>
  <div class="form-group">
    <%= f.label :name, "Enter Full Name" %>
    <%= f.text_field :name, :required => true, :class =>  'form-control', :placeholder => 'Joe Bloggs' %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Enter Password" %>
    <%= f.password_field :password, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Re-enter Password" %>
    <%= f.password_field :password_confirmation, :class => 'form-control' %>
  </div>

  <div class="row ">
    <div class="col text-center">
      <%= f.submit "Create", :class => 'btn btn-success btn-lg' %>
    </div>
  </div>

<% end %>

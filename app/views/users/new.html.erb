<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <ol>
    <li>test</li>
    <% @user.errors.full_messages do |m| %>
      <li><%= m %></li>
    <% end %>
  </ol>
<% end %>
<%= form_for @user do |f| %>

  <%= f.label :email%>
  <%= f.email_field :email, :required=> true %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>

<% end %>

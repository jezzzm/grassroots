

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ol>
      <% @user.errors.full_messages do |m| %>
        <li><%= m %></li>
      <% end %>
    </ol>
  <% end %>
  <div class="form-group mt-5">
    <%= f.label :email, "Enter Email" %>
    <%= f.email_field :email, :required => true, :class => 'form-control', :placeholder => 'great@example.com' %>
  </div>
  <div class="form-group">
    <%= f.label :name, "Enter Full Name" %>
    <%= f.text_field :name, :required => true, :class =>  'form-control', :placeholder => 'Joe Bloggs' %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Enter Password" %>
    <%= f.password_field :password, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Re-enter Password" %>
    <%= f.password_field :password_confirmation, :class => 'form-control' %>
  </div>

  <div class="row ">
    <div class="col text-center">
      <% if @current_user.present? %>
        <%= link_to("Cancel", user_path(@user), :class => 'btn btn-light btn-lg') %>
      <% end %>
      <%= f.submit text, :class => 'btn btn-success btn-lg' %>
    </div>
  </div>

<% end %>

<h2>Fixtures</h2> <!-- fixtures -->

<table>
  <thead>
    <tr>
      <th class="left-align">Date</th>
      <th class="left-align">Time</th>
      <th class="left-align">Ground</th>
      <th>Comp</th>
      <th class="right-align">Home Team</th>
      <th></th>
      <th class="left-align">Away Team</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% fixtures.each do |m| %>
    <tr>
      <td class="left-align"><%= short_date m%></td>
      <td class="left-align"><%= time_only m %></td>
      <td class="left-align"><%= link_to(m.ground.name, ground_path(m.ground.id)) %></td>
      <td><%= link_to("#{m.age_group}/#{m.division}", division_path(m.age_group, m.division)) %></td>
      <td class="right-align">
        <%= link_to(m.home_team.name, team_path(m.home_id), :class => team_classes(team_id: m.home_id, home: true)) %>
      </td>
      <td>vs.</td>
      <td class="left-align">
        <%= link_to(m.away_team.name, team_path(m.away_id), :class => team_classes(team_id: m.away_id)) %>
      </td>
      <td class="right-align"><%= link_to("View â†’", match_path(m.id)) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

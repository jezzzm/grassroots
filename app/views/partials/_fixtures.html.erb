<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th class="left-align">Date</th>
      <th class="left-align">Time</th>
      <th class="left-align">Ground</th>
      <th>Comp</th>
      <th>Round</th>
      <th class="right-align">Home Team</th>
      <th></th>
      <th class="left-align">Away Team</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% max = 0 %>
    <% fixtures.each do |m| %>
    <tr class="<%= "collapse multi-collapse" if i > 4 %>">
      <td class="left-align"><time><%= short_date m.game_date%></time></td>
      <td class="left-align"><time><%= time_only m.game_date %></time></td>
      <td class="left-align"><%= link_to(m.ground.name, ground_path(m.ground.id)) %></td>
      <td><%= link_to("#{m.age_group}/#{m.division}", division_path(m.age_group, m.division)) %></td>
      <td><%= m.round %></td>
      <td class="right-align">
        <%= link_to(m.home_team.name, team_path(m.home_id), :class => team_classes(m.home_id, true)) %>
      </td>
      <td>vs.</td>
      <td class="left-align">
        <%= link_to(m.away_team.name, team_path(m.away_id), :class => team_classes(m.away_id)) %>
      </td>
      <td class="right-align"><%= link_to("View â†’", match_path(m.id)) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if max > 4 %>
  <div>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse">Toggle Rows</button>
  </div>
<% end %>

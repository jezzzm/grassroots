<h1 class="display-3">Playing Field<h1>
<h1 class="mt-5"><%= link_to "GHFA Fields", grounds_path %> / <%= @ground.name %></h1>

<div class="row mt-5">
  <div class="col-md-2">
    <p><%= navigate_to(@ground.latitude, @ground.longitude, 'btn btn-lg btn-success') %></p>
    <p><strong>Short Sign:</strong> <%= @ground.short_sign %></p>
    <p><strong>Latitude:</strong> <%= @ground.latitude %></p>
    <p><strong>Longitude:</strong> <%= @ground.longitude %></p>
    <p><strong>Council:</strong> <%= link_to "Council" %></p>
  </div>
  <div class="col-md-10">
    <%= render "/partials/render_gmap", :lat => @ground.latitude, :long => @ground.longitude %>
  </div>
</div>

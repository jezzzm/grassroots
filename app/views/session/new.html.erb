<h1>User Login</h1>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>
<%= form_tag login_path do %><!-- form_tag for non-crud operations -->
  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Sign In" %>
<% end %>

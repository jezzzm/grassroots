<h1>Existing User Sign In</h1>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>
<%= form_tag login_path do %><!-- form_tag for non-crud operations -->
  <div class="form-group">
    <%= label_tag :email, "Enter Email" %>
    <%= email_field_tag :email, nil, :class => 'form-control', :placeholder => 'great@example.com' %>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Enter Password" %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>

  <div class="row ">
    <div class="col text-center">
      <%= submit_tag "Sign In", :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

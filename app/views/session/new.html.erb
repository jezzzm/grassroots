
<div class="row">
  <div class="col mx-auto text-center">
    <h1 class="display-3">Existing User Sign In</h1>
  </div>
</div>

<div class="row mt-5">
  <div class="col-sm-12 offset-sm-0 col-md-6 offset-md-3">
    <%= form_tag login_path do %>
      <% if flash[:error].present? %>
        <p><%= flash[:error] %></p>
      <% end %>
      <div class="form-group">
        <%= label_tag :email, "Enter Email" %>
        <%= email_field_tag :email, nil, :class => 'form-control', :placeholder => 'great@example.com' , :autofocus => true %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Enter Password" %>
        <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>

      <div class="row ">
        <div class="col text-center">
          <%= submit_tag "Sign In", :class => 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
